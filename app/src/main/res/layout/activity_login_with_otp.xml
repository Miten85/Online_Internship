<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_170sdp"
            android:src="@drawable/login_image" />

        <EditText
            android:id="@+id/login_with_otp_contact"
            style="@style/edit_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:layout_marginTop="@dimen/_30sdp"
            android:drawableLeft="@drawable/email_online"
            android:hint="Contact No."
            android:inputType="phone"
            android:maxLength="10" />

        <CheckBox
            android:id="@+id/login_with_otp_remeber"
            style="@style/check_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_with_otp_contact"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Remember me" />

        <Button
            android:id="@+id/login_with_otp_login"
            style="@style/button_16_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_with_otp_remeber"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Log In" />

        <Button
            android:id="@+id/login_with_otp_signup"
            style="@style/button_16_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_with_otp_login"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Sign Up" />

    </RelativeLayout>

</ScrollView>