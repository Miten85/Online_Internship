<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.OnlineInternship" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">#9F47E1</item>
        <item name="fontFamily">@font/josefin_sans_bold</item>
    </style>

    <style name="Theme.OnlineInternship" parent="Base.Theme.OnlineInternship" />

    <style name="edit_16" parent="Widget.AppCompat.EditText">
        <item name="android:paddingHorizontal">@dimen/_20sdp</item>
        <item name="android:paddingVertical">@dimen/_10sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white_trans</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="android:background">@drawable/custom_border</item>
    </style>

    <style name="check_14" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/white_trans</item>
        <item name="android:buttonTint">@color/white_trans</item>
    </style>

    <style name="button_16_white" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_button_white</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:textColor">@color/pink_red</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="button_16_red" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_button_red</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:textColor">@color/white_trans</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="text_14" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white_trans</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

</resources>